<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="../../stylesheets/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"
        integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2"><%- include('../navbar') %></div>

            <div class="col-sm-10" style="margin-top: 20px">
                <h1><%= title %></h1>
                <form action="" method="post">
                    <div class="form-group">
                        <label for="book"> Book: </label>
                        <select id="book" class="form-control" type="select" placeholder="Select book" name="book"
                            required="true">
                            <% book_list.sort(function(a, b) {let textA =
                a.title.toUpperCase(); let textB = b.title.toUpperCase(); return
                (textA < textB) ? -1 : (textA > textB) ? 1 : 0}) %> <% for (let
                book of book_list) { %> <%if (typeof book !== 'undefined' &&
                book) { %>
                            <option value="<%= book._id%>"
                                selected="<% typeof selected_book !== 'undefined' && selected_book === book._id.toString() ? 'selected' : false  %>">
                                <%= book.title %>
                            </option>
                            <% } %> <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="imprint"> Imprint: </label>
                        <input id="imprint" class="form-control" type="text" name="title"
                            placeholder="Publisher and date information"
                            value="<%= (typeof bookinstance === 'undefined') ? '' : bookinstance.imprint  %>"
                            required="true" />
                    </div>
                    <div class="form-group">
                        <label for="due_back"> Date when book available: </label>
                        <input id="due_back" class="form-control" type="date" name="due_back"
                            value="<%= (typeof bookinstance === 'undefined') ? '' : bookinstance.due_back_yyyy_mm_dd  %>" />
                    </div>
                    <div class="form-group">
                        <label for="isbn"> ISBN: </label>
                        <input id="isbn" class="form-control" type="text" name="isbn" placeholder="ISBN13"
                            value="<%= (typeof book === 'undefined') ? '' : book.isbn  %>" required="true" />
                    </div>
                    <div class="form-group">
                        <label for="status">Status:</label>
                        <select id="status" class="form-control" type="select" placeholder="Select status" name="status"
                            required="true">
                            <option value="Maintenance"
                                selected="<%= (typeof bookinstance === 'undefined' || bookinstance.status !== 'Maintenance') ? false : 'selected' %>">
                                Maintenance
                            </option>
                            <option value="Available"
                                selected="<%= (typeof bookinstance === 'undefined' || bookinstance.status !== 'Available') ? false : 'selected' %>">
                                Available
                            </option>
                            <option value="Loaned"
                                selected="<%= (typeof bookinstance === 'undefined' || bookinstance.status !== 'Loaned') ? false : 'selected' %>">
                                Loaned
                            </option>
                            <option value="Reserved"
                                selected="<%= (typeof bookinstance === 'undefined' || bookinstance.status !== 'Reserved') ? false : 'selected' %>">
                                Reserved
                            </option>
                        </select>
                    </div>
                    <button style="border: none; border-radius: 8px; padding: 6px" class="btn-primary" type="submit">
                        Submit
                    </button>
                </form>

                <% if (typeof errors !== 'undefined') { %> <% if (errors) { %>
                <ul>
                    <%errors.forEach((error) => { %>
                    <li><%= error.msg %></li>
                    <% }); %>
                </ul>
                <% } %> <% } %>
            </div>
        </div>
    </div>
</body>

</html>